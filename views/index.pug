extends layout

block content
  h1 MyDbEditor
  p Bienvenue sur  MyDbEditor
  p Veuillez vous identifier
  form(name="login",method="post", action='/mydbeditor')
    div(class='form-group')
        label(for='email') Nom d'utilisateur:
        input(type="text", class="form-control", name="user")
    div(class="form-group")
        label(for="pwd") Mot de passe:
        input(type="password", class="form-control", name="pwd")
    button(type="submit", class="btn btn-default") Se connecter
